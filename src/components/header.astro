---
import { Image } from 'astro:assets';
---
<header>
    <div id="page-header">
    <nav id="main-nav">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#about">About Us</a></li>
            <li><a href="#gallery">Gallery</a></li>
        </ul>
    </nav>
    <div id="logo">
    <Image src="/logo.jpg" width="400" height="300" alt="Bright Horizon's Exterior Lighting Logo" loading="eager" fetchpriority='high'/>
    </div>
    <nav id="secondary-nav">
        <ul>
            <li><a href="#testimonials">Testimonials</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </nav>    
    <div id='small-menu'>
        <a href="/">Home</a>
        <a href="#about">About</a>
        <a href="#gallery">Gallery</a>
        <a href="#testimonials">Testimonials</a>
        <a href="#contact">Contact</a>
    </div>       
</div>
</header>
<style>
    

    header {
        position: sticky;
        top: 0;
        background-color: rgba(255,255,255,1);
        z-index: 9999;
    }


    #page-header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }
    #main-nav{
        display: inline-flex;

    }

    #secondary-nav{
        display: inline-flex;
    }
    #logo{
        display: inline-flex;
    }
    
    header img {
        display: block;
        width: 300px;
        height: auto;
        margin-left: auto;
        margin-right: auto;
    }
    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;

    }
    li{
        display: grid;
        justify-content: center;

    }
    nav li a {
        font-size: 1.5em;
        text-decoration: none;
        color: black;
    }
    nav li a:hover {
        color: rgb(242, 196, 86);
    }
    #small-menu {
        display: none; /* Hidden by default, shown on small screens */
    }

@media only screen and (max-width: 700px) {
#main-nav, #secondary-nav {
    display: none;
}
#logo {
    justify-content: left;
    width: 100%;}
#small-menu {
    display: flex;
    flex-direction: column;
    padding: 20px;
}
#small-menu a {
    text-decoration: none;
    color: black;
    font-size: 1.5em;
    margin: 10px 0;
}
#small-menu a:hover {
    color: rgb(242,	196, 86);
}
}
</style>
